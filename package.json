{
  "name": "entities",
  "version": "1.0.0",
  "description": "Domain Driven Design(DDD) course from Fullcycle",
  "homepage": "https://github.com/jandiralceu/domain_driven_design_typescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/jandiralceu/domain_driven_design_typescript"
  },
  "bugs": {
    "email": "me@jandir.co",
    "url": "https://github.com/jandiralceu/domain_driven_design_typescript/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "test": "jest --bail --no-cache --runInBand --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "test:dashboard": "allure serve",
    "lint:eslint": "eslint --ext .ts --fix ./src",
    "lint:prettier": "prettier --write ./src",
    "lint:check": "prettier --check ./src",
    "prepare": "husky install",
    "commit": "cz",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "ddd",
    "domain driven design",
    "javascript",
    "typescript",
    "architecture",
    "fullcycle"
  ],
  "author": {
    "name": "Jandir A. Cutadiala",
    "url": "https://jandir.co",
    "email": "me@jandir.co"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.210",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.2",
    "jest-allure": "^0.1.3",
    "jest-jasmine2": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.21.3",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.8",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:eslint",
      "npm run lint:prettier",
      "npm run test:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
